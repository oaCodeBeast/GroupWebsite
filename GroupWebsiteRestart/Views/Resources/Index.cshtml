@model IEnumerable<GroupWebsiteRestart.Resource>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (Request.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.URL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        @if (Request.IsAuthenticated && User.IsInRole("Admin"))
        {
            <th></th>
        }
       
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ResourcesID }) |

                @*Added to restrict access to Admin only*@
                @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.ResourcesID }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.ResourcesID })
                }
            </td>
        </tr>
                }

</table>
